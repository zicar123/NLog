<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd C:\FILES\DOWNLOADS\BinaryDrive-NLog-master-featureNlog\BinaryDrive-NLog-master\Drive.WebHost\NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">

  <!-- optional, add some variables
  https://github.com/nlog/NLog/wiki/Configuration-file#variables
  -->
  <variable name="myvar" value="myvalue"/>

  <!--
  See https://github.com/nlog/nlog/wiki/Configuration-file
  for information on customizing logging rules and outputs.
   -->
  <targets async="true">
    <!--
      commandText="INSERT INTO [LogEntries] ([Date], [Level], [Logger], [Message]) VALUES (@Date, @Level, @Logger, @Message);">
    add your targets here
    See https://github.com/nlog/NLog/wiki/Targets for possible targets.
    See https://github.com/nlog/NLog/wiki/Layout-Renderers for the possible layout renderers.
    -->

    <target name="file" xsi:type="File" fileName="${specialfolder:folder=LocalApplicationData}/Logs/log ${shortdate}.log" 
    layout="${longdate} | ${uppercase:${level}} | ${logger} | ${message} | ${exception:format=tostring}"
    keepFileOpen="false" encoding="UTF-8"/>
    <!--%USERPROFILE%\AppData\Local\logs-->
    
    <target xsi:type="Database"
        name="DriveDB"
        connectionStringName="MyContext"
            commandText="INSERT INTO [dbo].[LogEntries]([Date], [Level], [Logger], [Message]) VALUES (@Date, @Level, @Logger, @Message);">
      <parameter name="@Date" layout="${longdate}" />
      <parameter name="@Level" layout="${level}" />
      <parameter name="@Logger" layout="${logger}" />
      <parameter name="@Message" layout="${message}" />
    </target>

  </targets>


  <rules>
    <!-- Write all events with minimal level of Trace (So Debug, Info, Warn, Error, Fatal, Trace)  to "file" -->
    <logger name="*" minlevel="Trace" writeTo="file" />
    <logger name="*" minlevel="Trace" writeTo="DriveDB" />

  </rules>
</nlog>
